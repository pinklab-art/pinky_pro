  </include>

  <include>
    <uri>model://shelf</uri>
    <name>shelf_4</name>
    <pose>1.4 0.5 0 0 0 0</pose>
  </include>
  


  <model name="robot_arm_box">
    <static>true</static>
    <pose>1.7 0 0 0 0 0</pose>
    <link name="robot_arm_box">
      <visual name="robot_arm_box_visual">
        <geometry>
