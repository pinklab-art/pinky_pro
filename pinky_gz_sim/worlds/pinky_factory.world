        </geometry>
        <material>
          <diffuse>0.7 0.7 0.7 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
        </material>
      </visual>
      <collision name="robot_arm_box_collision">
        <geometry>
          <box>
            <size>0.15 0.15 0.22</size>
          </box>
        </geometry>
      </collision>
    </link>
  </model>

