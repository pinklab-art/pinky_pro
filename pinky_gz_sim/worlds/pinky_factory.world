<?xml version="1.0" ?>
<sdf version="1.8">
  <world name="pinky_factory">
    <physics name="1ms" type="ignored">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1.0</real_time_factor>
    </physics>

    <plugin
      filename="gz-sim-physics-system"
      name="gz::sim::systems::Physics">
    </plugin>
    <plugin
      filename="gz-sim-sensors-system"
      name="gz::sim::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>
    <plugin
      filename="gz-sim-user-commands-system"
      name="gz::sim::systems::UserCommands">
    </plugin>
    <plugin
      filename="gz-sim-scene-broadcaster-system"
      name="gz::sim::systems::SceneBroadcaster">
    </plugin>
    <plugin filename="gz-sim-imu-system"
        name="gz::sim::systems::Imu">
    </plugin>
    <plugin filename="gz-sim-lamp-control-system" name="pinky_gz_sim::LampControlPlugin">
        <link>robot_lamp</link>
    </plugin>

    <!--light-->
    <light type="directional" name="sun">
      <cast_shadows>false</cast_shadows>
      <pose>0 0 2 0 0 0</pose>
      <diffuse>1 1 1 1</diffuse>
      <specular>1 1 1 1</specular>
      <attenuation>
        <range>1000</range>
        <constant>1</constant>
        <linear>0</linear>
        <quadratic>0</quadratic>
      </attenuation>
      <direction>0 0 -1</direction>
    </light>
    
    <model name="logo">
      <pose>0 0 0 0 0 0</pose>
      <static>true</static>
      <link name="logo_link">
        <visual name="logo_visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>4 3</size>
            </plane>
          </geometry>
          <material>
            <diffuse>1 1 1 1</diffuse>
            <specular>0.6 0.6 0.6 1</specular>
            <pbr>
              <metal>
                <albedo_map>file://img/pinklab_half.jpg</albedo_map>
              </metal>
            </pbr>
          </material>
        </visual>
        <collision name="logo_collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>4 2</size>
            </plane>
          </geometry>
          <surface>
            <contact>
              <collide_without_contact>true</collide_without_contact>
            </contact>
          </surface>
        </collision>
      </link>
    </model>

  <include>
    <uri>model://shelf</uri>
    <name>shelf_1</name>
    <pose>-0.65 -0.3 0 0 0 -1.57</pose>
  </include>

  <include>
    <uri>model://shelf</uri>
    <name>shelf_2</name>
    <pose>1.4 -0.7 0 0 0 0</pose>
  </include>

  <include>
    <uri>model://shelf</uri>
    <name>shelf_3</name>
